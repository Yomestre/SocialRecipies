<div class="row">
  <div class ="col-md-6">
    <h2>Ultimas receitas</h2>
    <% @recipes.each do |recipe| %>
      <div class="row">
        <div class="col-md-6">
        <%= image_tag recipe.image.url %>
        </div>
        <ul>
          <div class "col-md-6">
            <li>Nome da receita: <%=link_to recipe.name, recipe %></li>
            <li>Cozinha: <%=link_to recipe.cuisine.cuisine, recipe.cuisine %></li>
            <li>Tipo: <%=link_to recipe.food_type.food_type, recipe.food_type %></li>
            <li>Dificuldade: <%=recipe.difficulty_level %></li>
          </div>
        </ul>
      </div>
      <br>
    <% end %>
  <br>
  </div>
  <h2>Receitas mais favoritadas</h2>
  <% @favorited_recipes.each do |recipe| %>
    <div>
      <div class="col-md-3">
      <%= image_tag recipe.image.url %>
      </div>
      <ul>
        <div class "col-md-3">
          <li>Nome da receita: <%=link_to recipe.name, recipe %></li>
          <li>Cozinha: <%=link_to recipe.cuisine.cuisine, recipe.cuisine %></li>
          <li>Tipo: <%=link_to recipe.food_type.food_type, recipe.food_type %></li>
          <li>Dificuldade: <%=recipe.difficulty_level %></li>
        </div>
      </ul>
    </div>
    <br>
  <% end %>
</div>
