<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-3">
    <%= image_tag recipe.image.url %>
    </div>
    <div class="col-md-3">
      <p>Nome da receita: <%=link_to recipe.name, recipe %></p>
      <p>Cozinha: <%=link_to recipe.cuisine.cuisine, recipe.cuisine %></p>
      <p>Tipo: <%=link_to recipe.food_type.food_type, recipe.food_type %></p>
      <p>Dificuldade: <%=recipe.difficulty_level %></p>
      <br>
    </div>
  <% end %>
</div>